<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.noticeboard">

    <div metal:fill-slot="main">
        <div>
            <div class="pat-upload"
                 id="noticeboard-image-upload"
                 tal:attributes="data-url string:${context/absolute_url}/@@fileUpload">
            </div>
        </div>
        <script>
            var element = document.getElementById("noticeboard-image-upload");
            var upload = jQuery(element).patUpload({url: element.getAttribute("data-url")})
            upload.on("uploadAllCompleted", function(info){
                var dropzone = info.target.querySelector('.upload-area').dropzone;
                if (dropzone.getQueuedFiles().length === 0) {
                    window.parent.location.reload();
                }
            });
        </script>
    </div>
</html>
